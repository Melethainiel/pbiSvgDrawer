{
  "supportsHighlight" : true,
  "dataRoles": [
    {
      "displayName": "Paths",
      "name": "path",
      "kind": "Grouping"
    },
    {
      "displayName": "Identifiers",
      "name": "identifier",
      "kind": "Grouping"
    },
    {
      "displayName": "Selection",
      "name": "target",
      "kind": "Measure"
    },
    {
      "displayName": "Text",
      "name": "text",
      "kind": "Measure"
    }
  ],
  "objects": {
    "Color": {
      "displayName": "Couleurs",
      "properties": {
        "Basic": {
          "displayName": "Base",
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        },
        "Highlight": {
          "displayName": "Surbrillance",
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        }
      }
    },
    "Label": {
      "displayName": "Texte",
      "properties": {
        "show": {
          "displayName": "Show",
          "type": {
            "bool": true
          }
        },
        "fontSize": {
          "displayName": "Taille du texte",
          "type": {
            "formatting": {
              "fontSize": true
            }
          }
        },
        "fontFamily": {
          "displayName": "Famille de police",
          "type": {
            "formatting": {
              "fontFamily": true
            }
          }
        },
        "fontColor": {
          "displayName": "Couleur de police",
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        },
        "textAlignment": {
          "displayName": "Alignement",
          "type": {
            "formatting": {
              "alignment": true
            }
          }
        }
      }
    }
  },
  "dataViewMappings": [
    {
      "categorical": {
        "categories": {
          "select": [
            {
              "for": {
                "in": "path"
              }
            },
            {
              "for": {
                "in": "identifier"
              }
            }
          ]
        },
        "values": {
          "group": {
            "by": "Series",
            "select": [
              { "bind": { "to": "target" } },
              { "bind": { "to": "text" } }
            ]
          }
        }
      }

    }
  ],
  "tooltips": {
    "supportedTypes": {
      "default": true,
      "canvas": true
    },
    "roles": [
      "tooltips"
    ]
  }
}
